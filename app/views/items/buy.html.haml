= render 'items/sub-header'
.buy-content
  .buy-content__title
    .buy-content__title__text
      購入内容の確認
  .buy-content__main
    .buy-content__main__top
      .buy-content__main__top__img
        = image_tag @item.images[0].image.url
      .buy-content__main__top__text
        = @item.name
    .buy-content__main__price
      .buy-content__main__price__text
        = @item.price
        ¥
      .buy-content__main__price__tax
        送料込み  
    .buy-content__main__button
      .buy-content__main__button__text
        ポイントはありません
    .buy-content__main__buy-price
      .buy-content__main__buy-price__title
        支払い金額
      .buy-content__main__buy-price__number
        = @item.price
        ¥
      .buy-content__main__buy-price__button
        = form_tag(action: :pay, method: :post) do
          %button 購入する
  .buy-content__middle
    .buy-content__middle__adless
      .buy-content__middle__adless__title
        配送先
      .buy-content__middle__adless__text
        = current_user. residence.post_code
        = current_user. residence.city
        = current_user. residence.address
        = current_user. residence.detail
      .buy-content__middle__adless__name
        = current_user.name_kanji
      .buy-content__middle__adless__change
        変更する＞
  .buy-content__row
    .buy-content__row__pay-type
      .buy-content__row__pay-type__title
        支払い方法
        %br
        %br
        登録クレジットカード情報
        %br
        %br
        = "**** **** **** " + @default_card_information.last4
        %br
        - exp_month = @default_card_information.exp_month.to_s
        - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
        = exp_month + " / " + exp_year
      .buy-content__row__pay-type__change
        変更する＞   
= render 'items/sub-footer'

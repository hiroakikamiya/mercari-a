= render 'shared/sub-header'
.login-user
  .container
    .container__no-account
      アカウントをお持ちでない方はこちら
      %br
      = link_to user_path do
        新規会員登録
    .container__login
      .container__login--facebook.login-page-btn
        = link_to root_path do
          Facebookでログイン
          = fa_icon "facebook-square", class: "icon"
      .container__login--google.login-page-btn
        = link_to root_path do
          Googleでログイン
          = image_tag "google-icon.svg"
    .container__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .container__form--email
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"
        .container__form--password
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード"
        .container__form--recaptcha
          -# = recaptcha_tags
        .container__form--session
          = f.submit "ログイン", class: "btn-red"
        .container__form--forgot-password
          = link_to root_path do
            パスワードお忘れの方
= render 'shared/sub-footer'